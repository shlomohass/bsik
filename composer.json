{
    "require": {
        "google/apiclient": "^2.4",
        "components/jquery": "3.5.*",
        "fortawesome/font-awesome": "5.15.*",
        "components/bootstrap": "4.6.*",
        "wenzhixin/bootstrap-table": "1.18.*"
    },
    "scripts": {
        "post-install-cmd": [

        ],
        "post-update-cmd": [
            "php -r \"echo 'SIK SAYS -> Root Path is : ['.__DIR__.PHP_EOL;\"",
            "php -r \"echo 'SIK SAYS -> manage required is cleared...'.PHP_EOL;\"",
            "php -r \"array_map( 'unlink', array_filter((array) glob('./manage/lib/required/*') ) );\"",
            "php -r \"echo 'SIK SAYS -> Creating Folders for libs...'.PHP_EOL;\"",
            "php -r \"array_map(fn($d) => mkdir('./manage/lib/required/'.$d), ['jquery', 'bootstrap', 'font-awesome', 'bootstrap-table']);\"",
            "php -r \"echo 'SIK SAYS -> Copy required libs...'.PHP_EOL;\"",
            "cp -r './vendor/components/jquery/' './manage/lib/required/'",
            "cp -r './vendor/components/bootstrap/' './manage/lib/required/'",
            "cp -r './vendor/wenzhixin/bootstrap-table/dist/.' './manage/lib/required/bootstrap-table/",
            "cp -r './vendor/fortawesome/font-awesome/' './manage/lib/required/'"
        ]
    }

}